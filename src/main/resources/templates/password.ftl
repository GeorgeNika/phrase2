<html>
<head>
    <title>Phrase 2017 password</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/common.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>
<body>

<div class="container-fluid">
    menu - buttons
</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="form-group col-10 responsive-text-2">
            <label for="password-input" >Password for admin section</label>
            <div class="input-group">
                <input type="password" class="form-control" id="password-input" placeholder="Enter password"
                    aria-describedby="show-password">
                <span class="input-group-btn">
                    <button class="btn btn-outline-secondary" id="show-password">
                        Show
                    </button>
                </span>
            </div>
            <small id="password-help" class="form-text text-muted">If you don't now password - use guest log in.</small>
        </div>
    </div>
    <div class="row justify-content-center responsive-text-2">
        <div class="form-group col-3">
            <button type="button" class="btn btn-lg btn-block btn-primary" id="log-in">
                log in
            </button>
        </div>
        <div class="form-group col-4">
            <button type="button" class="btn btn-lg btn-block btn-success" id="guest-log-in">
                guest log in
            </button>
        </div>
        <div class="form-group col-3">
            <button type="button" class="btn btn-lg btn-block btn-secondary" id="return">
                return
            </button>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js"></script>

<script src="/js/password.js"></script>
</body>
</html>
